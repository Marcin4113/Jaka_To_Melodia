<Options>:
    BoxLayout:
        orientation: "vertical"
        spacing: "30dp"
        Label:
            size_hint: 0.5, 0.5
            pos_hint: {"center_x": 0.5}
            text: "Opcje"
            font_size: "60dp"

        BoxLayout:
            orientation: "vertical"
            cols: 2
            spacing: "30dp"
            BoxLayout:
                cols: 3
                Label:
                    text: "Głośność muzyki"
                    font_size: "40dp"
                Slider:
                    min: 0
                    max: 100
                    value: root.volume_value
                    on_value: root.on_slider_value_change(self)
                Label:
                    text: str(root.volume_value) + "%"

            Button:
                id: import_database_button
                text: "Importuj bazę danych piosenek"
                font_size: "40dp"
                on_release: root.download_database(self)
        Button:
            size_hint: 0.5, 0.3
            pos_hint: {"center_x": 0.5}
            text: "Powrót"
            font_size: "30dp"
            on_release: root.manager.current = "menu"