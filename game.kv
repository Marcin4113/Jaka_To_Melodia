<Game>:
    BoxLayout:
        orientation: "vertical"
        cols: 4

        Label:
            id: label
            size_hint: 1, 0.7
            text: "Gracz "
            font_size: "50dp"

        Image:
            source: "img/logo.jpg"
            allow_stretch: True

        ProgressBar:
            id: progress_bar
            max: 100
            value: root.playback_time

        BoxLayout:
            id: box_game

            Label:
                id: info
                spacing: 10
                #hallign: "center"
                #valign: "middle"
                size_hint: 1, 0.7
                text: "Naciśnij spację aby rozpocząć odsłuchiwanie fragmentu!"
                font_size: "40dp"