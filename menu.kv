<Menu>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'img/logo.jpg'
    BoxLayout:
        orientation: "vertical"
        spacing: "30dp"

        Image:
            source: "img/logo.jpg"
            allow_stretch: True

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 1
            spacing: "30dp"
            Button:
                text: "Graj!"
                font_size: "40dp"
                on_release: root.manager.current = "prepare_game_no_of_players"
            Button:
                text: "Opcje"
                font_size: "40dp"
                on_release: root.manager.current = "options"
            Button:
                text: "Wyniki"
                font_size: "40dp"
                on_release: root.manager.current = "results"

        Button:
            size_hint: 0.5, 0.5
            pos_hint: {"center_x": 0.5}
            text: "Wyj≈õcie"
            font_size: "40dp"
            on_release: app.stop()