<Intro>:
    label: video #referencing the label
    Video:
        id: video
        source:"vid/intro.mp4"
        state:"play"
        options: {'eos': 'stop'}

<ScreenTwo>:
    BoxLayout:
        orientation: "vertical"
        spacing: "30dp"
        Image:
            source: "img/logo.jpg"
            allow_stretch: True
        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 2
            spacing: "30dp"
            Button:
                text: "Nowa gra"
            Button:
                text: "Opcje"
            Button:
                text: "Wyniki"
        Button:
            size_hint: 0.5, 0.5
            pos_hint: {"center_x": 0.5}
            text: "Wyj≈õcie"
            on_release: app.stop()

<Manager>:
    id: screen_manager

    screen_one: intro
    screen_two: screen_two

    Intro:
        id: intro
        name: "intro"
        manager: screen_manager

    ScreenTwo:
        id: screen_two
        name: "menu"
        manager: screen_manager